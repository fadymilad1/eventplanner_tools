{
  "info": {
    "name": "Event Planner API - Phase 1",
    "description": "Complete API collection for Event Planner application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Team Meeting\",\n  \"description\": \"Monthly team meeting to discuss project progress\",\n  \"event_date\": \"2024-12-25\",\n  \"event_time\": \"10:00\",\n  \"location\": \"Conference Room A\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Get Organized Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/organized",
              "host": ["{{baseUrl}}"],
              "path": ["events", "organized"]
            }
          }
        },
        {
          "name": "Get Invited Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/invited",
              "host": ["{{baseUrl}}"],
              "path": ["events", "invited"]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/1",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1"]
            }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Team Meeting\",\n  \"description\": \"Updated description\",\n  \"location\": \"Conference Room B\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/1",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1"]
            }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/1",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1"]
            }
          }
        },
        {
          "name": "Search Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/search?keyword=meeting&startDate=2024-01-01&endDate=2024-12-31&role=organizer",
              "host": ["{{baseUrl}}"],
              "path": ["events", "search"],
              "query": [
                {
                  "key": "keyword",
                  "value": "meeting",
                  "description": "Search keyword"
                },
                {
                  "key": "startDate",
                  "value": "2024-01-01",
                  "description": "Start date (YYYY-MM-DD)"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31",
                  "description": "End date (YYYY-MM-DD)"
                },
                {
                  "key": "role",
                  "value": "organizer",
                  "description": "Role filter: organizer or attendee"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Invitations",
      "item": [
        {
          "name": "Invite User to Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"invitee_id\": 2,\n  \"role\": \"attendee\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/1/invitations",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1", "invitations"]
            }
          }
        },
        {
          "name": "Get Event Invitations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/1/invitations",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1", "invitations"]
            }
          }
        },
        {
          "name": "Get User Invitations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invitations",
              "host": ["{{baseUrl}}"],
              "path": ["invitations"]
            }
          }
        },
        {
          "name": "Update Invitation Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"accepted\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invitations/1",
              "host": ["{{baseUrl}}"],
              "path": ["invitations", "1"]
            }
          }
        },
        {
          "name": "Delete Invitation",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/1/invitations/2",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1", "invitations", "2"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/search?email=user@example.com&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["users", "search"],
              "query": [
                {
                  "key": "email",
                  "value": "user@example.com",
                  "description": "Email to search for (partial match)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Maximum number of results"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Set Attendance Status",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"going\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/1/attendance",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1", "attendance"]
            }
          }
        },
        {
          "name": "Get Event Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/1/attendance",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1", "attendance"]
            }
          }
        },
        {
          "name": "Get My Attendance for Event",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/1/attendance/me",
              "host": ["{{baseUrl}}"],
              "path": ["events", "1", "attendance", "me"]
            }
          }
        },
        {
          "name": "Get My Attending Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/attendance?status=going",
              "host": ["{{baseUrl}}"],
              "path": ["attendance"],
              "query": [
                {
                  "key": "status",
                  "value": "going",
                  "description": "Filter by status: going, maybe, not_going"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

